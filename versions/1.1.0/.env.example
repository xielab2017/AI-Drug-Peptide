# AI-Drug Peptide Environment Variables
# 复制此文件为 .env 并填入实际值

# PostgreSQL数据库配置
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=peptide_research
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here

# Neo4j图数据库配置
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here
NEO4J_DB=neo4j

# 肽段优化参数
TARGET_PEPTIDE_COUNT=100
TM_THRESHOLD=55.0
CROSS_SPECIES_RATIO=2.0

# 邮件通知配置（可选）
EMAIL_ENABLED=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your_email@example.com
SENDER_PASSWORD=your_email_password
RECIPIENT_EMAIL=recipient@example.com

# API密钥（如果需要）
STRING_API_KEY=your_string_api_key
UNIPROT_API_KEY=your_uniprot_api_key

# 工具路径（如果不在PATH中）
MGLTOOLS_PATH=/usr/local/mgltools
BLAST_DB_PATH=/usr/local/blast/db
TMHMM_PATH=/usr/local/tmhmm

# 性能配置
MAX_WORKERS=4
MEMORY_LIMIT=4GB
ENABLE_PROFILING=false

# 日志级别
LOG_LEVEL=INFO
